<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="367.0" prefWidth="436.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.reservia.reservia.controller.CreatePatientController">

   <VBox layoutX="50" layoutY="50" prefHeight="339.0" prefWidth="335.0" spacing="15">
      <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Registrar nuevo paciente" />
      <TextField fx:id="firstNameField" promptText="Nombre(s)" />
      <TextField fx:id="lastNameField" promptText="Apellido paterno" />
      <TextField fx:id="middleNameField" promptText="Apellido materno" />
      <TextField fx:id="curpField" promptText="CURP" />
      <TextField fx:id="phoneField" promptText="Teléfono" />
      <TextField fx:id="emailField" promptText="Correo electrónico" />
      <Button onAction="#savePatient" prefWidth="200" text="Guardar paciente" />
   </VBox>

</AnchorPane>

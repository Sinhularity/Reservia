<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.reservia.reservia.controller.DoctorListController"
            prefWidth="600" prefHeight="400">

    <VBox prefHeight="600.0" prefWidth="680.0" spacing="10" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Lista de doctores" />
        <TableView fx:id="doctorTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colFirstName" text="Email" prefWidth="100" />
                <TableColumn fx:id="colLastName" text="Email" prefWidth="100" />
                <TableColumn fx:id="colMiddleName" text="Email" prefWidth="100" />
                <TableColumn fx:id="colLicenseNumber" text="Email" prefWidth="100" />
                <TableColumn fx:id="colSpecialty" text="Especialidad" prefWidth="150" />
                <TableColumn fx:id="colEmail" text="Email" prefWidth="100" />
                <TableColumn fx:id="deleteColumn" prefWidth="60" text="Eliminar" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>
</AnchorPane>
